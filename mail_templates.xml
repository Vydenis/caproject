<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data noupdate="0">
        <record id="caproject_project_mail_template" model="mail.template">
            <field name="name">Project information template</field>
            <field name="email_from">${''}</field>
            <field name="subject">Project ${object.name} Info</field>
            <field name="email_to">${object.leader_id.work_email}</field>
            <field name="lang">${object.lang}</field>
            <field name="model_id" ref="caproject.model_caproject_project"/>
            <field name="report_template" ref="report_project"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html">
            <![CDATA[
            <p>Hello, ${(object.leader_id.name)},
            <br/><br/>
            It's Info of your session ${(object.name)}.<br/></p>

            Greetings,<br/>
            ${(object.name)}
            ]]>
            </field>
        </record>
    </data>
</odoo>